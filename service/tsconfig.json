{
  "include": ["../types/**.ts", "**/**.ts"],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "rootDir": "./..",
    "paths": {
      "*": ["./src/*"],
      "types/*": ["../types/*"],
    },
    "types": ["node"],
    "resolveJsonModule": true,
    "ignoreDeprecations": "5.0",
  }
}
